<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Web App - Capstone Project #3</title>

    <link rel="stylesheet" href="/style/style.css">
</head>
<body>

    <div class="header">
        <h1>Blog Web App</h1>

        <a href="/newPost" class="btn new-post">New Post</a>
    </div>

    <!-- <div class="wrapper"> -->
        <% if (posts.length > 0) { %>
         
            <% posts.forEach(post => { %>
         
                
                <div class="post-container">
        
                    <h2>
                        <%= post.title %>
                    </h2>
                    <p>
                        <%= post.content %>
                    </p>
                    <small>
                        By: <b><%= post.author %></b> -- from -- <b><%= post.country %></b>
                    </small>
                    <small>
                        <%= post.date %>
                    </small>
        
                    <div class="post-buttons">
                        <a href="#" class="btn comment">Comment</a>
                        <a href="/edit/<%= post.id %>" class="btn edit">Edit</a>
                        <a href="#" class="btn delete">Delete</a>
        
                    </div>
                </div>

            <% }) %>

        <% } else { %>

            <h2>No posts yet to display</h2>

            <% } %>     
        
    <!-- </div> -->
 

</body>
</html>